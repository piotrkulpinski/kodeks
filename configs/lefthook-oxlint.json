{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "pre-commit": {
    "parallel": true,
    "commands": {
      "lint:oxlint": {
        "glob": "*.{ts,tsx,js,jsx}",
        "run": "bunx oxlint --fix --no-errors-on-unmatched --files-ignore-unknown=true {staged_files}",
        "stage_fixed": true
      }
    }
  }
}
